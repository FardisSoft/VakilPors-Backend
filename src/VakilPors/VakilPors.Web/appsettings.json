{
  "ConnectionStrings": {
    "AppDbContext": "Your Connection String"
  },
  "JwtSettings": {
    "Issuer": "VakilPorsAPI",
    "Audience": "VakilPorsAPIClient",
    "Key": "YourSuperSecretKey",
    "TokenValidityInMinutes": 10,
    "RefreshTokenValidityInDays": 7
  },
  
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Application": "Vega API",
        "Args": { "serverUrl": "http://localhost:7032" }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
