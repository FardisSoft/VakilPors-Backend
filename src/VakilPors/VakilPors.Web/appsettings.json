{
  "ConnectionStrings": {
    "AppDbContext": "Your Connection String"
  },
  "JwtSettings": {
    "Issuer": "VakilPorsAPI",
    "Audience": "VakilPorsAPIClient",
    "Key": "YourSuperSecretKey",
    "TokenValidityInMinutes": 10,
    "RefreshTokenValidityInDays": 7
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/temp/logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Application": "Vega API",
        "Args": {
          "serverUrl": "http://0.0.0.0:80"
        }
      }
    ]
  },
  "LogLevel": {
    "Default": "Information",
    "Microsoft": "Information",
    "Microsoft.Hosting.Lifetime": "Information"
  },
  "AllowedHosts": "*"
}