{
  "ConnectionStrings": {
    "AppDbContext": "Your Connection String"
  },
  "JwtSettings": {
    "Issuer": "VakilPorsAPI",
    "Audience": "VakilPorsAPIClient",
    "Key": "YourSuperSecretKey",
    "TokenValidityInMinutes": 20,
    "RefreshTokenValidityInDays": 30
  },
  "RAYGAN_SMS": {
    "SENDER_NUMBER": "Your Sender Number",
    "USERNAME": "Your Username",
    "PASSWORD": "Your Password"
  },
  "Email": {
    "Name": "your name",
    "From": "set your email address",
    "Host": "set your smtp host",
    "Port": 587,
    "Username": "your username",
    "Password": "your password",
    "UseSSL": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/tmp/logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Application": "Vega API",
        "Args": {
          "serverUrl": "http://0.0.0.0:80"
        }
      }
    ]
  },
  "LogLevel": {
    "Default": "Information",
    "Microsoft": "Information",
    "Microsoft.Hosting.Lifetime": "Information"
  },
  "AWS": {
    "AccessKey": "your_access_key",
    "SecretKey": "your_secret_key",
    "Region": "us-east-1",
    "BucketName": "your_bucket_name"
  },
  "AllowedHosts": "*"
}